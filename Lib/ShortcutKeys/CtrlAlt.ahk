;##########################################################################################################
; Ctrl-Alt-/: Restart or load scripts
;##########################################################################################################
^!/::
IfWinActive .*.ahk - .* - Visual Studio Code
{
    ToolTip Reloading AutoHotkey scripts...
    Reload
}
Else
    Run "C:\Program Files\Microsoft VS Code\Code.exe" %A_ScriptDir%
Return


;##########################################################################################################
; Ctrl-Alt-C: Load Cmder
;##########################################################################################################
^!c:: LoadApp( "Cmder", "cmder" ) 


;##########################################################################################################
; Ctrl-Alt-G: Load Google Chrome
;##########################################################################################################
^!g::
LoadApp( "Google Chrome", "Chrome" )
WinWaitActive Google Chrome
Send ^l     ; Focus on the address bar
Sleep 100
Send {Esc}  ; Hide the address drop-down so the page content is visible
Return


;##########################################################################################################
; Ctrl-Alt-L: Login
;##########################################################################################################
^!l:: Login()


;##########################################################################################################
; Ctrl-Alt-M: Load Windows Mail
;##########################################################################################################
^!m:: LoadApp( "Windows Mail", "mailto:" ) 


;##########################################################################################################
; Ctrl-Alt-V: Load VSCode
;##########################################################################################################
^!v:: LoadApp( "Visual Studio Code", "C:\Program Files\Microsoft VS Code\Code.exe" )



;##########################################################################################################
; Ctrl-Alt-W: Load WhatsApp
;##########################################################################################################
^!w:: LoadApp( "WhatsApp", "%A_AppData%\..\Local\WhatsApp\WhatsApp.exe" )