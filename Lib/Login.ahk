;##########################################################################################################
; Function: Main login method
;##########################################################################################################
Login() {

    IfWinActive .*Login.GS.*
        Login_GS()
    Else {
        WinGetTitle winTitle, A
        ToolTip No login option found for: %winTitle%
        Sleep 2000 
    }

}


;##########################################################################################################
; Function: Login - GS
;##########################################################################################################
Login_GS() {

    SendSecret( "gs\user.txt", false )
    Sleep 100
    Send {Tab}
    Sleep 100
    SendSecret( "gs\pin.txt", false )

}